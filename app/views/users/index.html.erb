<h1>Listing users</h1>
  <table>
    <tr>
      <th>Name</th>      
     
      <th></th>
      <th></th>
      <th></th>

    </tr>
    <% @users.each do |user| %>
    <tr>
      <td><strong><%= user.username %></strong></td>
      <td><%if user.role_id ==1 %>
          Customer
        <% else %>
          Admin
        <%end%>
        
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
      <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
    <% end %>
</table>