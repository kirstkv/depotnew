<!DOCTYPE html>
<!DOCTYPE html>
<html>
<head>
<title>Chocolate World</title>
<%= stylesheet_link_tag "scaffold" %>
<%= stylesheet_link_tag "depot" , :media => "all" %>
<%= javascript_include_tag :defaults %>
<%= csrf_meta_tag %>
</head>
<body id="store">
<div id="banner">

    <div id="logo">
	<img src="./public/Chocolate_4.png" width="100"/>
    </div>
    
    
    <div id="navigation">
        <ul id="nav">
	    <li><%=link_to "Home", :controller => "home" %> &nbsp;&nbsp;&nbsp;&nbsp;</li>
	    <li><%=link_to "Chocolate Shop", :controller => "store" %>&nbsp;&nbsp;&nbsp;&nbsp;</li>
	    <li><%=link_to "FAQs", :controller => "faqs" %>&nbsp;&nbsp;&nbsp;&nbsp;</li>
	    <li><%=link_to "News", :controller => "news" %>&nbsp;&nbsp;&nbsp;&nbsp;</li>
	    <li><%=link_to "Contact Us", :controller => "contact" %>&nbsp;&nbsp;&nbsp;&nbsp;</li>
	    <% if current_user %>  
		<li>Logged in as <%= current_user.username %></li>  
		<li><%= link_to "Log out", log_out_path %>  &nbsp;&nbsp;&nbsp;&nbsp;</li>
	    <% else %>  
		<li><%= link_to "Sign up", sign_up_path %>  &nbsp;&nbsp;&nbsp;&nbsp;</li>
		<li><%= link_to "Log in", log_in_path %></li>
	    <% end %>
	    <% if current_user.role_id!=1 %>
		<li><%= link_to "Users", user_path %></li>
		<li><%= link_to "Products", product_path %></li>
	    <%end %>
	</ul>
    </div>

</div>

<div id="columns">
    <div id="side">
	<div id="cart">
	    <% if @cart %>
		<%= hidden_div_if(@cart.line_items.empty?, :id => "cart" ) do %>
		    <%= render @cart %>
		<% end %>
	    <% end %>
	</div>

	<div id="main">
	        <div>
        <% flash.each do |name, msg| %>  
            <%= content_tag :div, msg, :id => "flash#{name}" %>  
        <% end %> 
	</div>
	    <%= yield %>
	</div>
    </div>
</body>
</html>
