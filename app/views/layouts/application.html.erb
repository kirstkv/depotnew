<!DOCTYPE html>
<!DOCTYPE html>
<html>
<head>
<title>Chocolate World</title>
<%= stylesheet_link_tag "scaffold" %>
<%= stylesheet_link_tag "depot" , :media => "all" %>
<%= javascript_include_tag :defaults %>
<%= csrf_meta_tag %>
</head>
<body id="store">
<div id="banner">
    <div id="navigation">
        <ul id="nav">

	    <li><%=link_to "Home", :controller => "home" %> &nbsp;&nbsp;&nbsp;&nbsp;</li>
	    <li><%=link_to "Chocolate Shop", :controller => "store" %>&nbsp;&nbsp;&nbsp;&nbsp;</li>
	    <li><%=link_to "FAQs", :controller => "faqs" %>&nbsp;&nbsp;&nbsp;&nbsp;</li>
	    <li><%=link_to "News", :controller => "news" %>&nbsp;&nbsp;&nbsp;&nbsp;</li>
	    <li><%=link_to "Find Us", :controller => "findus" %>&nbsp;&nbsp;&nbsp;&nbsp;</li>
	    <li><%=link_to "Contact Us", :controller => "contact" %>&nbsp;&nbsp;&nbsp;&nbsp;</li>
	</ul>
	<br />
	<ul>    
	    <% if current_user %>  
		<li>Logged in as <%= current_user.username %></li>  
		<li><%= link_to "Log out", log_out_path %>  &nbsp;&nbsp;&nbsp;&nbsp;</li>
	    <% else %>  
		<li><%= link_to "Sign up", sign_up_path %>  &nbsp;&nbsp;&nbsp;&nbsp;</li>
		<li><%= link_to "Log in", log_in_path %>&nbsp;&nbsp;&nbsp;&nbsp;</li>
	    <% end %>
	
	    <%if current_user%>
		<% user=User.find_by_id(session[:user_id])%>
		<% if user.role_id!=1 %>
		    <li><%= link_to "Users", users_path %>&nbsp;&nbsp;&nbsp;&nbsp;</li>
		    <li><%= link_to "Products", products_path %>&nbsp;&nbsp;&nbsp;&nbsp;</li>
		    <li><%= link_to "Orders", orders_path %>&nbsp;&nbsp;&nbsp;&nbsp;</li>
		<%end %>
	    <% end %>
	</ul>
    </div>

</div>

<div id="columns">
    <div id="side">
	<div id="cart">
	       <% if @cart %>
		<%= hidden_div_if(@cart.line_items.empty?, :id => "cart" ) do %>
		    <%= render @cart %>
		<% end %>
		<% end %>
	    
	</div>
    </div>

    <div id="main">
	<div>
	    <% if flash %>
	    <% flash.each do |name, msg| %>  
		<%= content_tag :div, msg, :id => "flash#{name}" %>  
	    <% end %>
	    <% end %>	    
	</div>
	<%= yield %>
    </div>

</div>
</body>
</html>
